{% extends 'dashboard/main.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block content %}
    <div class="bg-white shadow-md rounded-lg p-6">
        <h1 class="text-2xl font-bold mb-6">User Management</h1>

        <table class="min-w-full border border-gray-300">
            <thead class="bg-gray-100">
            <tr>
                <th class="py-2 px-4 border-b text-left">Username</th>
                <th class="py-2 px-4 border-b text-left">Roles</th>
                <th class="py-2 px-4 border-b text-center">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td class="py-2 px-4 border-b">{{ user.username }}</td>
                    <td class="py-2 px-4 border-b">{{ user.roles|join(', ') }}</td>
                    <td class="py-2 px-4 border-b text-center">
                        <a href="{{ path('app_admin_edit_user', {id: user.id}) }}"
                           class="text-blue-500 hover:text-blue-700">
                            Edit
                        </a>
                        <a href="{{ path('app_admin_delete_user', {id: user.id}) }}"
                           class="text-red-500 hover:text-red-700 ml-4"
                           onclick="return confirm('Are you sure you want to delete this user?');">
                            Delete
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td class="py-2 px-4 border-b text-center" colspan="5">No users found.</td>
                </tr>
            {% endfor %}
            <tr>
                <td class="py-2 px-4 border-b text-center" colspan="5">
                    <a href="{{ path('app_admin_add_user') }}"
                       class="text-blue-500 hover:text-blue-700">
                        Add New User
                    </a>
                </td>
            </tbody>
        </table>
    </div>
{% endblock %}
