{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex h-screen">
        <div class="w-64 shadow-lg">
            <div class="p-4 border-b">
                <span class="text-gray-400">{{ app.user }}</span>
                <div>
                    <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            </div>
            <nav class="p-4">
                <div class="flex justify-between items-center mb-4">
                    <h2 class="text-lg font-semibold">Projects</h2>
                    <a href="{{ path('app_project_new') }}"
                       class="bg-blue-500 text-white px-3 py-1 rounded-md text-sm hover:bg-blue-600">
                        New
                    </a>
                </div>
                {% for project in app.user.projects %}
                    <a href="{{ path('app_project_show', {id: project.id}) }}"
                       class="block p-2 hover:bg-gray-100 rounded-md">
                        {{ project.name }}
                    </a>
                {% endfor %}
            </nav>
        </div>

        <div class="flex-1 p-8">
            {% block content %}{% endblock %}
        </div>
    </div>
{% endblock %}