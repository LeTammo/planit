{% extends 'dashboard/main.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block content %}
    <h1 class="text-3xl font-bold">Dashboard</h1>
    {% if main_data.projects is empty %}
        <div class="alert alert-info">
            You don't have any projects yet.
            <a href="{{ path('app_project_new') }}" class="alert-link">Create your first project</a>
        </div>
    {% else %}
        <div class="hidden row">
            {% for project in main_data.projects %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ project.name }}</h5>
                            <p class="card-text">
                                {{ project.count }} tasks
                            </p>
                            <a href="{{ path('app_project_show', {id: project.id}) }}"
                               class="btn btn-primary">View Project</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}