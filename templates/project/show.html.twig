{% extends 'dashboard/main.html.twig' %}

{% block title %}{{ project.name }}{% endblock %}

{% block content %}
    <div class="max-w-3xl">
        <div class="pb-12 flex justify-between items-center">
            <h1 class="pl-2 text-4xl font-bold">{{ project.name }}</h1>
            <a href="{{ path('app_project_edit', {id: project.id}) }}">
                <div class="mr-4 w-4 h-4">
                    {% include 'components/icons/pen_square.svg.html.twig' with {
                        c_size: 'w-6 h-6',
                        c_color_hover: '#0284c7'
                    } %}
                </div>
            </a>
        </div>
        <div>
            <div class="px-2 border-t-2 border-b-2 hover:bg-gray-100 hover:shadow-inner">
                <a href="{{ path('app_task_new', {project: project.id}) }}">
                    <div class="py-2 flex items-center">
                        {% include 'components/icons/plus.svg.html.twig' %}
                        <span class="ml-2 text-zinc-400">New Task</span>
                    </div>
                </a>
            </div>
            {% if project.tasks %}
                {% for task in project.tasks %}
                    <div class="relative mt-4">
                        {% if task.parent is null %}
                            {% include 'task/_task_item.html.twig' with { 'task': task } %}
                            {% if task.subTasks is not empty %}
                                <div class="relative pl-10">
                                    {% for subTask in task.subTasks %}
                                        <div class="relative">
                                            <div class="absolute left-[-9px] top-0 border-l-2 border-zinc-300
                                                    {% if loop.last %}h-1/2{% else %}h-full{% endif %}"></div>
                                            <div class="absolute left-[-9px] top-1/2 w-2 border-t-2 border-zinc-300"></div>
                                            {% include 'task/_task_item.html.twig' with { 'task': subTask } %}
                                        </div>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        {% endif %}
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
{% endblock %}