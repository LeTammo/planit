{% set id = "svg-icon-" ~ random() %}
<svg
        class="w-4 h-4 {{ id }}"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="none"
        width="800px"
        height="800px">
    <path
            d="M4 12H20M12 4V20"
            stroke="{% if c_color is defined %}{{ c_color }}{% else %}#a1a1aa{% endif %}"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
    />
</svg>
{% if c_color_hover is defined %}
    <style>
        a:hover .{{ id }} path {stroke: {{ c_color_hover }};}
    </style>
{% endif %}